generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ORG_ADMIN
  USER
}

enum ForecastType {
  BINARY
  CONTINUOUS
  CATEGORICAL
}

enum DataType {
  NUMBER
  CURRENCY
  PERCENT
  DECIMAL
  INTEGER
}

enum LedgerKind {
  REVENUE // cash in
  EXPENSE // cash out
  PAYMENT // other cash movement (e.g., grant, loan proceeds, repayments)
  DEBT // liability records (do NOT change cash)
}

model Organization {
  id          String             @id @default(cuid())
  name        String             @unique
  description String?
  users       User[]
  forecasts   Forecast[]
  categories  ForecastCategory[]
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  ledgerEntries LedgerEntry[]
}

model User {
  id             String        @id @default(cuid())
  name           String?
  email          String        @unique
  emailVerified  DateTime?
  image          String?
  role           Role          @default(USER)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  accounts       Account[]
  sessions       Session[]
  predictions    Prediction[]
  // Optional for WebAuthn support
  // Authenticator Authenticator[]

  // back-relation to ledger
  ledgerEntries LedgerEntry[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LedgerEntry {
  id             String     @id @default(cuid())
  userId         String?
  organizationId String?
  amountCents    Int // + inflow, - outflow for cash kinds
  kind           LedgerKind
  occurredAt     DateTime   @default(now())
  settledAt      DateTime? // mark DEBT as settled here
  memo           String?

  user         User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([userId, occurredAt])
  @@index([userId, kind, occurredAt])
  @@index([organizationId, occurredAt])
  @@index([organizationId, kind, occurredAt])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model ForecastCategory {
  id             String       @id @default(cuid())
  name           String
  description    String?
  color          String? // Hex color code for UI display
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  forecasts      Forecast[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([organizationId, name])
  @@index([organizationId])
}

model Forecast {
  id              String            @id @default(cuid())
  title           String
  description     String?
  type            ForecastType
  dataType        DataType? // Only for CONTINUOUS forecasts
  dueDate         DateTime // When predictions are due (includes time)
  dataReleaseDate DateTime? // When the actual data will be released (includes time)
  organizationId  String
  organization    Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  categoryId      String?
  category        ForecastCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  predictions     Prediction[]
  // For categorical forecasts, store options as JSON array
  options         Json?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  slug            String    @db.VarChar(160)

  @@unique([organizationId, slug])
  @@index([organizationId])
  @@index([categoryId])
  @@index([type])
  @@index([dueDate])
}

model Prediction {
  id               String   @id @default(cuid())
  forecastId       String
  forecast         Forecast @relation(fields: [forecastId], references: [id], onDelete: Cascade)
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Store the prediction value - interpretation depends on forecast type:
  // BINARY: "true" or "false"
  // CONTINUOUS: numerical value as string
  // CATEGORICAL: one of the options
  value            String
  // Optional confidence level (0-100) - also known as Probability
  confidence       Int?
  // Optional reasoning/notes
  reasoning        String?
  // Method used for the prediction
  method           String?
  // Estimated time spent on the prediction (in minutes)
  estimatedTime    Int?
  // Equity investment amount
  equityInvestment Float?
  // Debt financing amount
  debtFinancing    Float?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([forecastId, userId])
  @@index([forecastId])
  @@index([userId])
}

